            <div class="login-cadastro">
                <h1 class="font-1-m-b" style="text-align: center;">Insira o seu E-mail para a recuperação de senha</h1>
                {{>_msg}}
                <form action="/recuperar_senha" method="post" class="formulario">
                <input type="hidden" name="key" id="key" value="{{data.key}}">
                <input type="hidden" name="id_contratante" id="id_contratante" value="{{data.id_contratante}}">
                <input type="hidden" name="id_trabalhador" id="id_trabalhador" value="{{data.id_trabalhador}}">
                    <div class="input-login-cadastro">
                        <label for="email"><i class="far fa-envelope"></i></label>
                        <input type="email" name="email" class="input-logon"id="email" value="{{data.email}}" placeholder="Digite seu E-mail">
                    </div>
                    <input type="submit" class="botao destaque submit" value="Enviar">
                </form>
            </div>
        </div>
    </main>

