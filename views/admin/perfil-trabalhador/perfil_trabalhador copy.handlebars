<header class="header-bg">
        <div class="header container">
            <a href="./index.html"><img src="/img/svgs/logo-horizontal.svg" alt="Logo do projeto conecctive"></a>
            <div class="barra-pesquisa">
                <input type="text" name="pesquisar" id="pesquisar" class="input-logon" placeholder="Pesquisar Pessoas">
                <button for="pesquisar"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
                <nav>
                    <ul class="lista-primaria">
                        <li><a href="">Editar perfil</a></li>
                        <li><a href="">Alternar perfil</a></li>
                        <li><a href="./">Sair</a></li>
                    </ul>
                </nav>
           
        </div>
    </header>


    <main class="perfil-bg">
        <input type="hidden" name="id_trabalhador" id="id_trabalhador" value="{{data.id_trabalhador}}">
        <div class="ponto-luz"></div>
        <div class="perfil container">
            <button class="editar-perfil"><i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i>editar</button>
            <div class="info-basica flex-centro">
                  {{#if imgPerfilUsuario}} 
            <img src="/img/imagemusuario/{{imgPerfilUsuario}}" class="img-perfil">
            
            {{else}}
                <img class="img-perfil" src="/img/icones/perfil-de-usuario.png" alt="Foto de Perfil" class="img-perfil">
            {{/if}}
            <h1 class="font-1-xl cor-0">{{nomeUsuario}}</h1>
            <p class="cor-0 font-2-s">{{cidadeUsuario}} <br>{{estadoUsuario}}</p>
            </div>
            <div class="habilidades-tec">
                <h2 class="font-1-m-b cor-1"><span class="cor-p1"><i class="fas fa-code"></i></span> Habilidades Técnicas</h2>
                <ul class="lista-habilidades font-2-s cor-0">
                    <li>{{habilidadesTecnicas}}</li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
            </div>
            <div class="portfolio box-shadow flex">
                <h2 class="font-1-m-b cor-1"><span class="cor-p1"><i class="fas fa-briefcase"></i></span> Projetos</h2>
                <div class="projetos">
                    <img src="" alt="Imagem Projeto">
                    <p class="font-2-s cor-0">{{portifolio}}</p>
                    <a href="#" class="font-2-s cor-0">Ver projeto</a>
                </div>
            </div>
            <div class="contato-perfil flex">
                <h2 class="font-1-m-b cor-1"><span class="cor-p1"><i class="fas fa-envelope"></i></span> Contato</h2>
                <p class="font-2-s cor-2">{{emailSecundario}}</p>
                <p class="font-2-s cor-2">{{telefoneUsuario}}</p>
                <ul class="sociais-perfil cor-0">
                    <li><a href=""><i class="fab fa-instagram"></i></a></li>
                    <li><a href=""><i class="fab fa-linkedin"></i></a></li>
                    <li><a href=""><i class="fab fa-github"></i></a></li>
                </ul>
            </div>
            <div class="sobre-perfil flex">
                <h2 class="font-1-m-b cor-1"> <span class="cor-p1"><i class="fas fa-user"></i></span> Sobre mim</h2>
                <p class="font-2-s cor-2">{{experienciasUsuario}}</p>
            </div>
            
            <div class="avaliacoes flex-centro box-shadow">
                <h2 class="font-1-m-b cor-1"> <span style="color: gold;"><i class="fas fa-star"></i></span> Avaliações</h2>
                <p class="font-2-s cor-2">Sensacional o profissional robson</p>
            </div>
        </div>
    </main>
    

<footer class="footer-bg">
    <div class="footer container">
        <img src="/img/svgs/logo-horizontal.svg" alt="">
        <div class="contato">
            <h3 class="cor-0 font-2-xl">CONTATO</h3>
            <ul class="lista-footer cor-6 font-1-s">
                <li><a href="mailto:contato@bikcraft.com">inotec@gmail.com</a></li>
            </ul>
            <div class="sociais">
                <a href="./"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
        <div class="informacoes">
            <h3 class="cor-0 font-2-xl">INFORMAÇÕES</h3>
            <ul class="cor-6 font-1-s">
                <li><a href="">Termos e Condições</a></li>
                <li><a href="">Insenção de responsabilidade</a></li>
            </ul>
        </div>
        <div class="footer-copy font-2-m cor-6">
            <p>Conecctive © Alguns direitos reservados.</p>
        </div>
</footer>
<script src="script/cadastro/opcao.js"></script>